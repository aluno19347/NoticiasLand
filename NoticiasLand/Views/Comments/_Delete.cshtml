﻿@model NNoticiasLandModels.CommentsModel


@using (Html.BeginForm("Delete", "Comments", new { id = Model.Id }, FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    <input type="submit" class="btn btn-default btn-xs pull-right" value="Delete" onclick="return confirm('Are you sure you want to delete this comment?')" />

}
@model NoticiasLand.Models.CommentsModel

@{
    ViewBag.Title = "Edit Comment";
}

@using (Html.BeginForm("Edit", "Comments", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        <span class="col-md-2 control-label">Comments</span>
        <div class="col-md-8">
            @Html.TextAreaFor(m => m.Text, new { @class = "form-control", @Value = "", @style = "min-width: 80%; resize:none; min-height:50px;" })
        </div>
        <div class="col-md-2">
            @Html.HiddenFor(m => m.NewsId, new {  })
            @Html.HiddenFor(m => m.UserName, new { @Value = User.Identity.Name })
            @Html.HiddenFor(m => m.IdUser, new {  })
            @Html.HiddenFor(m => m.Id, new {  })

            <input type="submit" class="btn btn-default pull-right" value="Edit comments" />
        </div>
        <br />
        <br />
    </div>
    <br />
    <hr />
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
@{var Model = new NoticiasLand.Models.CommentsModel();}
@{var urlPath = HttpContext.Current.Request.Url.AbsolutePath;}


@using (Html.BeginForm("Create", "Comments", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
    @Html.ValidationSummary("", new { @class = "text-danger" })
        <span class="col-md-2 control-label">Comment</span>
        <div class="col-md-8">
            @Html.TextAreaFor(m => Model.Text, new { @class = "form-control pull-left", @Value = "", @style = "min-width: 80%; resize:none; min-height:50px;" })
        </div>
        <br />
        <br />
        <div class="col-md-2">
            @Html.HiddenFor(m => Model.NewsId, new { @Value = @urlPath.Split('/').Last() })
            <input type="submit" class="btn btn-default pull-right" value="Comment" />
        </div>
        <br />
        <br />
    </div>
    <br />
    <hr />
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}